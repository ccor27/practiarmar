<?xml version="1.0" encoding="UTF-8"?>
<persistence version="2.1" xmlns="http://xmlns.jcp.org/xml/ns/persistence" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/persistence http://xmlns.jcp.org/xml/ns/persistence/persistence_2_1.xsd">
  <persistence-unit name="practiarmar_DB_PU" transaction-type="RESOURCE_LOCAL">
    <class>practiarmar.proyecto.modelo.Cliente</class>
    <class>practiarmar.proyecto.modelo.Empleado</class>
    <class>practiarmar.proyecto.modelo.Factura</class>
    <class>practiarmar.proyecto.modelo.Foto</class>
    <class>practiarmar.proyecto.modelo.Herramienta</class>
    <class>practiarmar.proyecto.modelo.Item</class>
    <class>practiarmar.proyecto.modelo.PagoEmpleado</class>
    <class>practiarmar.proyecto.modelo.Proyecto</class>
    <properties>
      <property name="javax.persistence.jdbc.url" value="jdbc:mysql://localhost:3306/practiarmar?serverTimezone=UTC"/>
      <property name="javax.persistence.jdbc.user" value="root"/>
      <property name="javax.persistence.jdbc.driver" value="com.mysql.cj.jdbc.Driver"/>
      <property name="javax.persistence.jdbc.password" value="password"/>
      <property name="javax.persistence.schema-generation.database.action" value="create"/>
    </properties>
  </persistence-unit>
</persistence>
